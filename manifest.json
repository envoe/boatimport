{
    "name": "Boat 3 Importer",
    "description": "Importiert Zeiten in Boat Version 3",
    "version": "0.1.0",
    "manifest_version": 3,
    "author": "envoe", 
    "icons" : {
        "128": "/media/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }, 
    "action": {
        "default_popup": "popup.html",
        "default_title": "Boat 3 Importer",
        "default_icon": {
            "128": "/media/icon.png"
        }
    },
    "options_page": "options.html",
    "permissions": [
        "storage", 
        "activeTab", 
        "scripting", 
        "tabs"
    ],
    "host_permissions": [
        "https://www.boat.bva.bund.de/meinetaetigkeiten/*"
    ]
}